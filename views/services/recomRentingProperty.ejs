<br><br>
<form action="/services/recommendedRentingProperty" method="POST">
    <fieldset>
        <h3 class="text-center">Recommended Renting Property</h3>
        <table style="margin-left: auto; margin-right: auto;">
            <tr>
                <th><label>Customer : </label></th>
                <td>
                    <select name="Customer_ID">
                        <option label="-- Select Customer --" value="">
                        <% if (customerlist) { %>
                            <% customerlist.forEach(customer => { %>
                                <% if (customer.Customer_ID == Customer_ID) { %>
                                    <option selected label="<%= customer.Customer_ID%> - <%= customer.LName_Customer%> <%= customer.FName_Customer%>" value="<%= customer.Customer_ID%>">
                                <% } else { %>
                                    <option label="<%= customer.Customer_ID%> - <%= customer.LName_Customer%> <%= customer.FName_Customer%>" value="<%= customer.Customer_ID%>">
                                <% } %>
                            <% }) %>
                        <% } %>
                    </select>
                </td>
                <td></td>
                <td>
                    <button class="btn btn-primary btn-sm" type="submit">Search</button>
                </td>
            </tr>
        </table>
    </fieldset>
</form>
<br><br>
<% if (recommendedlist) { %>
    <table class="table table-hover" style="width: 90% !important; margin-left: auto !important; margin-right: auto !important;">
        <tr class="table-info">
            <th>Property ID</th>
            <th>District</th>
            <th>Estate</th>
            <th>Block Number</th>
            <th>Floor Number</th>
            <th>Gross Floor Area (sq. feet)</th>
            <th>Number of Bedroom</th>
            <th>CarPark_Provided</th>
            <th>Rental Price</th>
        </tr>
        <% recommendedlist.forEach(property => { %>
            <tr class="table-light">
                <td><%= property.Property_ID %></td>
                <td><%= property.District%></td>
                <td><%= property.Estate%></td>
                <td><%= property.Block_Num%></td>
                <td><%= property.Floor_Num%></td>
                <td><%= property.GrossFloorArea%></td>
                <td><%= property.NumOfBedroom%></td>
                <% if (property.CarPark_Provided) { %>
                    <td>Yes</td>
                <% } else { %>
                    <td>No</td>
                <% } %>
                <td><%= property.Rental_Price%></td>
            </tr>
        <% }) %>
    </table>
    <% if (recordCount != null && recordCount == 0) { %>
        <br><br>
        <p class="text-center blockquote ">No Record Found, Please contact the customer to follow up.</p>
    <% } %>
<% } else { %>
    <p class="text-center blockquote ">- Please select the customer -</p>
<% } %>